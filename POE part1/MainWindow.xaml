<Window x:Class="POE_part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE_part1" 
        mc:Ignorable="d"
        Title="Contract Monthly Claim System" Height="700" Width="932"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ✅ Added SelectionChanged here (this is the correct place) -->
        <TabControl FontSize="14" FontWeight="Bold" Grid.Row="0" SelectionChanged="TabControl_SelectionChanged">

            <!-- Lecturer Tab -->
            <TabItem Header="Lecturer">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <TextBlock Text="Submit Monthly Claim" FontSize="20" 
                                   FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20"/>

                        <!-- Claim Form -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="5,0">
                                <TextBlock Text="Lecturer ID:"/>
                                <TextBox x:Name="LecturerIDTextBox" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0">
                                <TextBlock Text="Hours Worked:"/>
                                <TextBox x:Name="HoursWorkedTextBox" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="5,0">
                                <TextBlock Text="Hourly Rate:"/>
                                <TextBox x:Name="HourlyRateTextBox" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="5,0">
                                <TextBlock Text="Total Amount:"/>
                                <TextBox x:Name="TotalAmountTextBox" Height="30"
                                         IsReadOnly="True" Background="#DDDDDD"/>
                            </StackPanel>
                        </Grid>

                        <!-- Notes Field -->
                        <StackPanel Margin="5,0,0,10">
                            <TextBlock Text="Additional Notes:"/>
                            <TextBox x:Name="NotesTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>

                        <!-- Upload Button -->
                        <StackPanel Orientation="Horizontal" Margin="5,0,0,20">
                            <Button Content="Upload Document" Width="200" Height="35"
                                    Background="#5A7D9A" Foreground="White" 
                                    Click="OpenUploadDocs"/>
                            <TextBlock x:Name="UploadedFileNameTextBlock" 
                                       Text="No file uploaded" Margin="10,5,0,0" Foreground="Gray"/>
                        </StackPanel>

                        <!-- Submit Button -->
                        <Button Content="Submit Claim" Width="150" Height="40"
                                Background="#5A7D9A" Foreground="White"
                                Click="OpenClaimStatus"/>

                        <!-- Lecturer Claims Table -->
                        <TextBlock Text="Your Claims:" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid x:Name="LecturerClaimsDataGrid" Width="853" Height="200"
                                  AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="*"/>
                                <DataGridTextColumn Header="Lecturer ID" Binding="{Binding LecturerID}" Width="*"/>
                                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                                <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                <DataGridTemplateColumn Header="Progress" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ProgressBar Minimum="0" Maximum="3"
                                                         Value="{Binding StatusProgress}" Height="20"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            
            <TabItem Header="Academic Manager">
                <StackPanel Margin="20">
                    <TextBlock Text="Pending Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid x:Name="CoordinatorClaimsDataGrid" Width="827" Height="300"
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="*"/>
                            <DataGridTextColumn Header="Lecturer ID" Binding="{Binding LecturerID}" Width="*"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                            <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            <DataGridTemplateColumn Header="Action" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Approve" Width="80" Height="25"
                                                    Background="#4CAF50" Foreground="White"
                                                    CommandParameter="{Binding}" 
                                                    Click="OpenManagerDashboard_Click"/>
                                          
                                            <Button Content="Reject" Width="80" Height="25"
                                                    Background="#F44336" Foreground="White"
                                                    Margin="5,0,0,0" CommandParameter="{Binding}"
                                                    Click="RejectClaim_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

           
            <TabItem Header="Programme Coordinator">
                <StackPanel Margin="20">
                    <TextBlock Text="All Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid x:Name="ManagerClaimsDataGrid" Width="834" Height="311"
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="*"/>
                            <DataGridTextColumn Header="Lecturer ID" Binding="{Binding LecturerID}" Width="*"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                            <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
